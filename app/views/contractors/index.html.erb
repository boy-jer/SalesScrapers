<h1>Listing contractors</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Area</th>
    <th>Contractor</th>
    <th>Operations count</th>
  </tr>

<% @contractors.each do |contractor| %>
  <tr>
    <td><%=h contractor.name %></td>
    <td><%=h contractor.district %></td>
    <td><%=h contractor.contractor_id %></td>
    <td><%=h contractor.operations_count %></td>
    <td><%= link_to 'Show', contractor %></td>
    <td><%= link_to 'Edit', edit_contractor_path(contractor) %></td>
    <td><%= link_to 'Destroy', contractor, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

