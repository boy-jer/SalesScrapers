<h1>New contractor</h1>

<% form_for(@contractor) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :district %><br />
    <%= f.text_field :district %>
  </p>
  <p>
    <%= f.label :contractor_id %><br />
    <%= f.text_field :contractor_id %>
  </p>
  <p>
    <%= f.label :operations_count %><br />
    <%= f.text_field :operations_count %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', contractors_path %>